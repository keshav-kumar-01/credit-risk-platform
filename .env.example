# =====================================================
# CreditRisk.AI — Environment Variables
# =====================================================
# Copy this to .env and fill in your values
# Railway: Set these in Settings → Variables

# ---- APPLICATION ----
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-strong-random-secret-key-here
PORT=8000

# ---- API ----
API_KEY=your-custom-api-key-here
RATE_LIMIT=1000
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# ---- MODEL ----
MODEL_VERSION=2.0.0
MODEL_PATH=models/trained/best_model_catboost.pkl

# ---- LOGGING ----
LOG_LEVEL=INFO
ENABLE_METRICS=False
SENTRY_DSN=

# ---- DATABASE (optional — not required for basic deployment) ----
# DATABASE_URL=postgresql://user:password@host:5432/credit_risk
# MONGO_URI=mongodb://host:27017/credit_risk

# ---- EMAIL (optional — not required for basic deployment) ----
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# ---- AWS (optional — not required for basic deployment) ----
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# ---- SESSION ----
SESSION_TIMEOUT=3600
